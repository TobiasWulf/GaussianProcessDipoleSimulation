\RequirePackage{booktabs}           % different rulers in table environment like toprule

\RequirePackage[toc,page]{appendix} % custom appendix pages with toc support
\RequirePackage[
backend=biber,
style=numeric,
sorting=ynt,
defernumbers=true,
language=auto,
hyperref=auto,
backref=false,
date=year
